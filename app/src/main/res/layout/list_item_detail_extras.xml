<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_additional_pane"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/granite"
    android:paddingBottom="@dimen/detail_bottom_padding"
    android:paddingEnd="@dimen/detail_horizontal_padding"
    android:paddingLeft="@dimen/detail_horizontal_padding"
    android:paddingRight="@dimen/detail_horizontal_padding"
    android:paddingStart="@dimen/detail_horizontal_padding"
    android:paddingTop="@dimen/abc_list_item_padding_horizontal_material"
    android:columnCount="2"
    android:rowCount="2">

    <!-- Include extra info -->

    <TextView
        android:id="@+id/stock_price_label"
        android:layout_height="wrap_content"
        android:textAppearance="@style/DetailsLabelText"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:text="@string/stock_price_label"
        tools:text="Dividends:"/>

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/stock_price"
        android:textAppearance="@style/DetailsText"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_row="1"
        tools:text="$1000"/>

    <TextView
        android:id="@+id/stock_variation_label"
        android:layout_height="wrap_content"
        android:textAppearance="@style/DetailsLabelText"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:text="@string/stock_variation"
        tools:text="Price:"/>

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/stock_variation"
        android:textAppearance="@style/DetailsText"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        tools:text="$400"/>

    <!--<android.support.v7.widget.AppCompatButton
        android:id="@+id/button_remove_stock"
        android:layout_width="@dimen/detail_button_width"
        android:layout_height="@dimen/detail_button_height"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_columnSpan="2"
        android:text="@string/button_remove_stock"
        tools:text="Remove Stock"/> -->

</GridLayout>